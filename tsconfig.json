{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "esnext"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "src",
    "paths": {
      "src*": ["src*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
}